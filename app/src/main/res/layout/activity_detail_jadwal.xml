<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.jadwal.detail.DetailJadwalActivity">

    <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_margin="@dimen/size_16dp"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.jadwal.detail.DetailJadwalActivity">

        <TextView
                android:textStyle="bold"
                android:textSize="@dimen/size_16sp"
                android:text="Daftar Jam Tersedia :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_jadwal"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <TextView
                android:textSize="@dimen/size_16sp"
                android:text="*Jam Mulai - Jam Selesai"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/size_16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_weight="1"
                    android:id="@+id/spn_mulai"
                    android:hint="@string/label_jam_mulai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Spinner
                    android:layout_weight="1"
                    android:id="@+id/spn_selesai"
                    android:hint="@string/label_jam_selesai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cek"
                android:text="Cek Ketersedian"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/size_16dp"
                android:background="@drawable/btn_bg_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_booking"
                android:text="Booking"
                android:visibility="gone"
                android:textColor="@color/green"
                android:layout_marginTop="@dimen/size_16dp"
                android:background="@drawable/btn_bg_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>