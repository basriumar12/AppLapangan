<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/size_16dp"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_16dp"
            android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:id="@+id/img_lapangan"
                android:src="@drawable/img_splash1"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <TextView
                android:layout_marginTop="@dimen/size_10dp"
                android:textStyle="bold"
                android:textSize="@dimen/size_16sp"
                android:textAlignment="center"
                android:id="@+id/tv_name"
                android:text="loading.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAlignment="center"
                android:id="@+id/tv_status"
                android:textColor="@color/green"
                android:text="loading.."
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAlignment="center"
                android:id="@+id/tv_price_total"
                android:textColor="@color/red"
                android:text="loading.."
                android:textStyle="bold"
                android:textSize="@dimen/size_16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView

                android:id="@+id/tv_date"
                android:text="Jadwal :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_jadwal"
                tools:listitem="@layout/item_jadwal_for_booking"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="@dimen/size_4dp"
                android:id="@+id/tv_deskripsi"
                android:text="loading.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <TextView
                android:layout_marginTop="@dimen/size_8dp"
                android:id="@+id/tv_gedung"
                android:text="loading.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView

                android:textStyle="italic"
                android:layout_marginTop="@dimen/size_16dp"
                android:text="Catatan : Jumlah Bayar di upload sesuai dengan nominal total harga lapangan yang di booking, Kirim ke Rekening BANK BRI 0913910 A.N Alwin Ibrahinm "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="@dimen/size_16dp"
                android:id="@+id/btn_cancel"
                android:visibility="gone"
                android:text="Batalkan Booking"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ImageView
                android:layout_marginTop="@dimen/size_8dp"
                android:id="@+id/img_bukti"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_booking"
            android:text="Upload Bukti Bayar"
            android:textColor="@color/white"
            android:background="@color/blue_primary"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
</RelativeLayout>